    ></script>
    <title>NoleLodging | <%=dorm.name%></title>
  </head>
  <body>
    <nav class="navbar" style="background-color: #782f40">
      <div class="container-fluid">
        <a class="navbar-brand" href="/">
          <img src="./dorms/assets/icon.png" width="64" height="64" />
        </a>
        <form class="d-flex" action="/results" method="POST">
          <input
            class="form-control me-2"
            type="search"
            placeholder="Search Dorms"
            aria-label="Search"
            name="name"
          />
          <button class="btn btn-gold" type="submit">Search</button>
        </form>
      </div>
    </nav>

    <div
      class="card container-lg text-center shadow mt-5"
      style="border: 4px solid #ceb888; border-radius: 20px"
    >
      <div class="card-header" style="background-color: #782f40">
        <h1 class="text-light"><%=dorm.name %></h1>
      </div>
      <div class="card-body">

        <% let averageOverall = 0, averageLocation = 0, averageSize= 0, averageSocial= 0, averageNoise= 0 , averageProximity = 0, counter =0; 
        for(let ratingSum of dorm.reviews){
          averageLocation += ratingSum.location;
          averageSize += ratingSum.size;
          averageSocial += ratingSum.social;
          averageNoise += ratingSum.noise;
          averageProximity += ratingSum.proximity;
          counter+=1;
        } 
        averageLocation /= counter;
        averageSize /= counter;
        averageSocial /= counter;
        averageNoise /= counter;
        averageProximity /= counter;
        averageLocation = parseFloat(averageLocation.toFixed(1));
        averageSize = parseFloat(averageSize.toFixed(1));
        averageSocial = parseFloat(averageSocial.toFixed(1));
        averageNoise = parseFloat(averageNoise.toFixed(1));
        averageProximity = parseFloat(averageProximity.toFixed(1));


%> 



        <div class="row container mb-2" style="margin: 0 auto">
          <div class="card w-100" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/rating.png" alt="" />
              <h4 class="card-text mt-1">Overall: </h4>
              <h4 class="card-text mt-1"><%=dorm.overallRating%>/5 </h4>
            </div>
          </div>
        </div>
        <div class="container d-flex" style="margin: 0 auto">
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/location.png" alt="" />
              <h3 class="card-text">Location:</h3>
              <h4 class="card-text mt-1"><%=averageLocation %> / 5</h4>
            </div>
          </div>
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/locationrate.png" alt="" />
              <h3 class="card-text">Size:</h3>
              <h4 class="card-text mt-1"><%=averageSize %> / 5</h4>
            </div>
          </div>
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/social.png" alt="" />
              <h3 class="card-text">Social Life:</h3>
              <h4 class="card-text mt-1"><%=averageSocial%> / 5</h4>
            </div>
          </div>
        </div>
        <div class="container d-flex" style="margin: 0 auto">
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/noise.png" alt="" />
              <h3 class="card-text">Noise Level:</h3>
              <h4 class="card-text mt-1"><%=averageNoise %> / 5</h4>
            </div>
          </div>
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/class.png" alt="" />
              <h3 class="card-text">Proximity to Class:</h3>
              <h4 class="card-text mt-1"><%=averageProximity %> / 5</h4>
            </div>
          </div>
          </div>
        </div>

        <div
          id="carouselExampleIndicators"
          class="carousel slide"
          data-ride="carousel"
        >
          <ol class="carousel-indicators">
            <li
              data-target="#carouselExampleIndicators"
              data-slide-to="0"
              class="active"
            ></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img
                class="d-block w-100"
                src="<%=dorm.image[0]%> "
                alt="First slide"
              />
            </div>
            <div class="carousel-item">
              <img
                class="d-block w-100"
                src="<%=dorm.image[1]%>"
                alt="Second slide"
              />
            </div>
            <div class="carousel-item">
              <img
                class="d-block w-100"
                src="<%=dorm.image[2]%>"
                alt="Third slide"
              />
            </div>
          </div>
          <a
            class="carousel-control-prev"
            href="#carouselExampleIndicators"
            role="button"
            data-slide="prev"
          >
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
          </a>
          <a
            class="carousel-control-next"
            href="#carouselExampleIndicators"
            role="button"
            data-slide="next"
          >
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only"></span>
          </a>
        </div>
        <div class="row container mb-2 mt-3" style="margin: 0 auto">
          <div class="card w-100" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/location.png" alt="" />
              <h4 class="card-text mt-1"><%=dorm.location %></h4>
            </div>
          </div>
        </div>
        <div class="container d-flex" style="margin: 0 auto">
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/residents.png" alt="" />
              <h4 class="card-text mt-1"><%=dorm.capacity %></h4>
            </div>
          </div>
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/built.png" alt="" />
              <h4 class="card-text mt-1"><%=dorm.year %></h4>
            </div>
          </div>
          <div class="card w-50" style="border: 2px solid #ceb888">
            <div class="card-body">
              <img src="./dorms/assets/floors.png" alt="" />
              <h4 class="card-text mt-1"><%=dorm.floors %></h4>
            </div>
          </div>
        </div>
        <a href="/<%=dorm._id%>/add-review " class="btn btn-gold mt-3 mb-3">Write a Review</a>
      </div>

      <h2 class = "mt-5 mb-5 text-center" style="color: #782f40">Reviews</h2>

      

      <%const reverseReviews = dorm.reviews.reverse(); for(let review of reverseReviews){ %> 

      <div class="card container-sm shadow mb-3" style="border: 2px solid #ceb888">
        <div class="card-header " style="background: none">
          <%  let d = review._id.getTimestamp(); d = d.toLocaleDateString();%> 
          <h5><span class="badge badge-secondary bg-secondary mr-2" id = "<%=review.grade%>"><%=review.grade%></span></h5> <%= d%> 
          
        </div>
        <div class="row">
        <ul class="list-group  mt-2 d-flex flex-row justify-content-between">
          <li class="list-group-item d-flex " style="border: none">
            <img src="./dorms/assets/location.png" alt="" height ="32" width = "32"/><h5>Location: <%=review.location%> / 5 </h5></li>
          <li class="list-group-item d-flex " style="border: none">
            <img src="./dorms/assets/locationrate.png" alt="" height ="32" width = "32"/><h5>Size: <%=review.size%> / 5</h5></li>
          <li class="list-group-item d-flex " style="border: none">
            <img src="./dorms/assets/social.png" alt="" height ="32" width = "32"/><h5>Social Life: <%=review.social%> / 5</h5></li>
          <li class="list-group-item d-flex " style="border: none">
            <img src="./dorms/assets/noise.png" alt="" height ="32" width = "32"/><h5>Noise Level: <%=review.noise%> / 5</h5></li>
          <li class="list-group-item d-flex " style="border: none">
            <img src="./dorms/assets/class.png" alt="" height ="32" width = "32"/><h5>Proximity to Class: <%=review.proximity%> / 5</h5></li>
        </ul>
    </div>
<div class="row">
        <p class="card-text pt-3 pb-3"><%=review.message%></p>
      </div>

      </div>

      <%}  %> 


    </div>

    <footer class="bg-light text-center text-lg-start">
      <div
        class="p-3 text-light d-flex justify-content-between align-items-center"
        style="background-color: #782f40"
      >
        <div class="left-footer">
          Â©
          <a class="text-light" href="https://nolelodging.com/"
            >nolelodging.com</a
          >
        </div>
        <div class="middle-footer">
          <a href="https://www.sixfigurelabs.com">
            <img
              src="./dorms/assets/LogoWhite.svg"
              alt=""
              height="50"
              width="auto"
            />
          </a>
        </div>
        <a class="text-light" href="/privacy">Privacy Policy</a>
      </div>
    </footer>
  </body>
</html>
