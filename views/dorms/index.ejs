      content="./dorms/assets/NoleLodgingBanner.png"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi"
      crossorigin="anonymous"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Lato:ital,wght@0,100;0,300;0,400;0,700;0,900;1,100;1,300;1,400;1,700;1,900&display=swap"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="/dorms/main.css" />
    <script
      defer
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-OERcA2EqjJCMA+/3y+gxIOqMEjwtxJY7qPCqsdltbNJuaOe923+mo//f6V8Qbsw3"
      crossorigin="anonymous"
    ></script>
    <script
      src="https://code.jquery.com/jquery-3.2.1.slim.min.js"
      integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
      crossorigin="anonymous"
      defer
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/popper.js@1.12.9/dist/umd/popper.min.js"
      integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q"
      crossorigin="anonymous"
      defer
    ></script>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/js/bootstrap.min.js"
      integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl"
      crossorigin="anonymous"
      defer
    ></script>
  </head>
  <body>
    <nav class="navbar shadow" style="background-color: #782f40">
      <div class="container">
        <a class="navbar-brand" href="/">
          <img src="./dorms/assets/icon.png" width="64" height="64" />
        </a>
        <a href="/about" class="btn btn-gold">About</a>
      </div>
    </nav>

    <div
      class="mw-100 rounded-bottom bg-secondary shadow d-flex justify-content-center"
      style="min-height: 400px"
    >
      <div class="row container-md">
        <form
          class="d-flex flex-column justify-content-center"
          action="/results"
          method="POST"
        >
          <div class="main-content">
            <h1>
              Florida State's <span id="heading-1">#1</span> Dorm Ranking Site
            </h1>
            <p>
              For students, by students. NoleLodging is the best way to choose
              your college dorm. View statistics, reviews, and comparisons to
              find the best fit for you.
            </p>
          </div>

          <div class="main-content-right row">
            <div class="col-8">
              <input
                class="form-control form-control-lg"
                list="datalistOptions"
                id="exampleDataList"
                placeholder="Search Dorms"
                name="name"
                required
              />
            </div>
            <datalist id="datalistOptions">
              <%for(let option of dorms){ %>

              <option value="<%=option.name%>"></option>
              <% } %>
            </datalist>
            <button class="btn btn-gold col-4">Search</button>
          </div>
        </form>
      </div>
    </div>

    <form action="/" class="mt-3" method="POST">
      <div class="dropdown show m-3 d-inline shadow">
        <a
          class="btn btn-gold dropdown-toggle"
          href="#"
          role="button"
          id="dropdownMenuLink"
          data-toggle="dropdown"
          aria-haspopup="true"
          aria-expanded="false"
        >
          Sort By: <%=option%>
        </a>

        <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
          <button class="dropdown-item" href="#" name="name" value="name">
            Name
          </button>
          <button
            class="dropdown-item"
            href="#"
            name="toprated"
            value="toprated"
          >
            Top Rated
          </button>
          <button
            class="dropdown-item"
            href="#"
            name="residentslow"
            value="residentslow"
          >
            Residents (Low to High)
          </button>
          <button
            class="dropdown-item"
            href="#"
            name="residentshigh"
            value="residentshigh"
          >
            Residents (High to Low)
          </button>
          <button class="dropdown-item" href="#" name="yearlow" value="yearlow">
            Age (Low to High)
          </button>
          <button
            class="dropdown-item"
            href="#"
            name="yearhigh"
            value="yearhigh"
          >
            Age (High to Low)
          </button>
          <button
            class="dropdown-item"
            href="#"
            name="floorlow"
            value="floorlow"
          >
            Floors (Low to High)
          </button>
          <button
            class="dropdown-item"
            href="#"
            name="floorhigh"
            value="floorhigh"
          >
            Floors (High to Low)
          </button>
        </div>
      </div>
    </form>

    <div class="container text-center">
      <div class="row justify-content-around mb-5">
        <%for(let dorm of dorms) {%>
        <div class="col-md-4 align-items-center mb-5" style="width: 22rem">
          <div class="card shadow" style="border: 2px solid #ceb888">
            <a href="/<%=dorm._id%> "
              ><img src=" <%=dorm.image[0]%>  " class="card-img-top" alt="..."
            /></a>
            <div class="card-body">
              <h2 class="card-title"><%=dorm.name %></h2>
              <h3 class="card-text" style="color: #782f40">
                <%=dorm.overallRating %> / 5
              </h3>
            </div>
            <ul class="list-group list-group-flush align-items-center">
              <li class="list-group-item">Location: <%=dorm.location%></li>
              <li class="list-group-item">Residents: <%=dorm.capacity%></li>
              <li class="list-group-item">Built: <%=dorm.year%></li>
              <li class="list-group-item">Floors: <%=dorm.floors%></li>
            </ul>
            <div class="card-body">
              <a href="/<%=dorm._id%>" class="card-link btn btn-gold"
                >Explore <%=dorm.name%>
              </a>
            </div>
          </div>
        </div>

        <% } %>
      </div>
    </div>

    <footer class="bg-light text-center text-lg-start">
      <div
        class="p-3 text-light d-flex justify-content-between align-items-center"
        style="background-color: #782f40"
      >
        <div class="left-footer">
          Â©
          <a class="text-light" href="https://nolelodging.com/"
            >nolelodging.com</a
          >
        </div>
        <div class="middle-footer">
          <a href="https://www.sixfigurelabs.com">
            <img
              src="./dorms/assets/LogoWhite.svg"
              alt=""
              height="50"
              width="auto"
            />
          </a>
        </div>
        <a class="text-light" href="/privacy">Privacy Policy</a>
      </div>
    </footer>
  </body>
</html>
